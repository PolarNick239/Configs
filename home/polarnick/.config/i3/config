# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
# bar {
#        status_command i3status
#}

# i3bar
bar {
    status_command    ~/.config/i3/venv/bin/python3 ~/.config/i3/.i3pystatus.py
    position          bottom
    workspace_buttons yes
}


bindsym --release Print exec scrot -e 'mv $f ~/Pictures/'
bindsym --release Ctrl+Print exec spectacle --region --background

# This is the same, but for Logitech mx keys mini mechanical (i.e. this is the fn+F8 and the Ctrl+fn+F8)
bindsym --release $mod+Shift+s exec scrot -e 'mv $f ~/Pictures/'
bindsym --release $mod+Ctrl+Shift+s exec spectacle --region --background

exec_always "setxkbmap -model pc104 -layout us,ru -variant ,, -option grp:win_space_toggle"

# Background setting
exec --no-startup-id feh --bg-scale ~/.config/i3/lock_screen.png
# i3lock configuring (includes setting keyboard to latin layout)
bindsym --release $mod+l exec "xkb-switch -s us; i3lock -i ~/.config/i3/lock_screen.png -c 111122"
# network manager starting
exec --no-startup-id 'nm-applet'
# Unity gtk theme
exec unity-settings-daemon

# Chrome to workspace 1
exec --no-startup-id i3-msg 'workspace 1; exec chromium-browser'
# Krusader to workspace 10
exec --no-startup-id i3-msg 'workspace 10; exec krusader'
# Telegram to workspace 10
exec --no-startup-id i3-msg 'workspace 10; exec telegram-desktop'
